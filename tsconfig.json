{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "lib": ["esnext"],
    "target": "es2017",
    "moduleResolution": "Node",
    "newLine": "CRLF",
    "outDir": "tsc-out",
    "baseUrl": "src/",
    "sourceMap": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "typeRoots": [
      "./node_modules/@types",
      "./types/"
    ]
  },
  "include": [
    ".eslintrc.cjs",
    "prettier.config.js",
    "src/**/*",
    "tools/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "../overmind-docs/docs",
    "ignoreCompilerErrors": true,
    "excludeNotExported": true,
    "exclude": "**/*+(Assimilator|Overmind).ts",
    "readme": "none"
  }
}

